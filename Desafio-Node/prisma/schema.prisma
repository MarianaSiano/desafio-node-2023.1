generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//Criar uma migration yarn prisma migrate dev
//Restaurante
model Restaurante {
  id        Int    @id @default(autoincrement())
  nome      String
  email     String @unique
  senha     String
  categoria String
  cidade    String
  endereco  String
  telefone  String

  created_at DateTime @default(now())
  uptade_at  DateTime @default(now())

  produtos Produto[]
  pedidos  Pedido[]

  @@map("restaurantes")
}

//Produto
model Produto {
  id          Int         @id @default(autoincrement())
  nome        String
  descricao   String
  quantidade  Int
  preco       String
  categoria   String
  restaurante Restaurante @relation(fields: [id_restaurante], references: [id])
  pedidos     Pedido[]

  created_at DateTime @default(now())
  uptade_at  DateTime @default(now())

  id_restaurante Int
  //id_restaurante Restaurante //Está dando erro na relação (?)

  @@map("produtos")
}

//Pedidos
model Pedido {
  id               Int           @id @default(autoincrement())
  valor_total      String
  nome_cliente     String
  cidade_cliente   String
  endereco_cliente String
  telefone_cliente String
  restaurante      Restaurante @relation(fields: [id_restaurante], references: [id])
  produtos         Produto[]

  created_at DateTime @default(now())
  uptade_at  DateTime @default(now())

  @@map("pedidos")

  id_restaurante Int
}
